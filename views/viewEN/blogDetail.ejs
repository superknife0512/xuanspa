<%- include('../includes/html-header.ejs') %>
    <%- include('../includes/en/client-header.ejs') %>

    <div class="blogDetail container">
        <h3 class="blogDetail__title">
            <%= blog.title %>
        </h3>
        <i class="blogDetail__abstract">
            <%= blog.shortDesc %>
        </i>
        <p></p>
        <div class="blogDetail__info">
            <div class="servDetail__info">
                <svg>
                    <use xlink:href="images/symbol.svg#icon-eye"></use>
                </svg>
                <p> <%= blog.views %> views </p>
            </div>

            <div class="servDetail__info">
                <svg>
                    <use xlink:href="images/symbol.svg#icon-clock"></use>
                </svg>
                <p class="blog__date-info"> <%= date %> </p>
            </div>
        </div>

        <div class="blogDetail__content">
            <input type="hidden" name="html" value="<%= blog.html %>">
            <div id="content"></div>
        </div>
        <hr>
        <h4 class="blogDetail__title">
            Other articles
        </h4>
        <div class="blogDetail__other">
            <% others.forEach(blog=>{ %>

                <%- include('../includes/en/blogCard',{
                    blog: blog
                }) %>

            <% }) %>
        </div>
    </div>   

     <%- include('../includes/en/client-footer.ejs') %>
<%- include('../includes/html-footer.ejs') %>