<%- include('../includes/html-header.ejs') %>
<!-- navbar section -->
<%- include('../includes/admin-header.ejs') %>

    <div class="container service">
        <h2>Footer edit</h2>
        <hr>
        <form action="/admin/put-footer"
            enctype="multipart/form-data"
            method="POST">

            <div class="form-group">
                <label for="fb">Facebook link</label>
                <input 
                    type="text" 
                    class="form-control" 
                    name="fb"
                    value="<%= footer?.fb %>">
            </div>
            <div class="form-group">
                <label for="talk">Talk</label>
                <input 
                    type="text" 
                    class="form-control" 
                    name="talk" 
                    value="<%= footer?.talk %>">
            </div>
            <div class="form-group">
                <label for="trip">Tripadvisor link</label>
                <input 
                    type="text" 
                    class="form-control" 
                    name="trip"
                    value="<%= footer?.trip %>">
            </div>
            <div class="form-group">
                <label for="ig">Instagram</label>
                <input 
                    type="text" 
                    class="form-control" 
                    name="ig"
                    value="<%= footer?.ig %>">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input 
                    type="text" 
                    class="form-control" 
                    name="email"
                    value="<%= footer?.email %>">
            </div>
            <br>
            <div class="form-group">
                <label for="Banner">Banner (1920x400)</label>
                <input 
                    type="file" 
                    accept="image/*" 
                    class="form-control" 
                    name="banner">
                <img 
                    src="<%= footer?.imgUrl %>" 
                    alt="img banner" 
                    class="mt-2 img-thumbnail" 
                    height=200 >
            </div>
            <button class="btn btn-primary">
                Submit
            </button>
        </form>
    </div>

<%- include('../includes/html-footer.ejs') %>